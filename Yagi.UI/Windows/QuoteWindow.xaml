<Window x:Class="Yagi.UI.Windows.QuoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Yagi.UI.ViewModel"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{DynamicResource QuoteBackground}"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        Title="QuoteWindow" MinHeight="60" MaxWidth="800">
    <Window.Resources>
        <SolidColorBrush x:Key="QuoteBackground" Color="White" Opacity="0.5" />
    </Window.Resources>
    <Window.DataContext>
        <vm:QuoteWindowViewModel />
    </Window.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding Path=Text}" 
                   LineHeight="25"
                   FontSize="18"
                   TextWrapping="Wrap"
                   Padding="10"></TextBlock>
        <TextBlock Text="{Binding Path=Author}"
                   FontSize="14"
                   Padding="100 5 5 5"></TextBlock>
    </StackPanel>
</Window>
