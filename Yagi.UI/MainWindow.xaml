<Window x:Class="Yagi.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.codeplex.com/wpfcontrib/xaml/presentation"
        Title="MainWindow" 
        ShowInTaskbar="False" 
        Visibility="Hidden">
    <Grid>
        <av:NotifyIcon Name="notifyIcon" Icon="/Yagi.UI;component/Properties/yagm.ico" IconVisibility="Visible">
            <FrameworkElement.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Next Quote" Click="NextQuote_OnClick"/>
                    <MenuItem Header="Exit" Click="Exit_OnClick" />
                    <Separator />
                    <MenuItem Header="About YAGM" />
                </ContextMenu>
            </FrameworkElement.ContextMenu>
        </av:NotifyIcon>
    </Grid>
</Window>
